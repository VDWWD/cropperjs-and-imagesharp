@model WebApplication1.Models.HomeViewModel

<!-- van der Waal Webdesign -->
<!-- https://www.vanderwaal.eu -->

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @enctype = "multipart/form-data", @role = "form" }))
{
    <div class="container bg-white pt-3">

        <div class="row">
            <div class="col-6">

                <div class="form-group">
                    @Html.LabelFor(m => m.image_upload)
                    <div class="custom-file">
                        @Html.TextBoxFor(m => m.image_upload, new { type = "file", @class = "custom-file-input", capture = "camera", accept = ".bmp,.gif,.jpg,.jpeg,.png" })
                        <label class="custom-file-label"></label>
                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col pt-3 pb-4">

                <button class="btn btn-primary" type="submit">
                    Upload and Crop
                </button>

            </div>
        </div>
        <div class="row">
            <div class="col-6 pb-3">

                <label for="@Html.IdFor(m => m.cropper_data)">
                    Data generated by Cropper.js. You can also paste the data from the <a target="_blank" href="https://fengyuanchen.github.io/cropperjs/">Project Site.</a> To get the data there, click on the "Get Data" button and paste the code in the textarea below.
                </label>
                @Html.TextAreaFor(m => m.cropper_data, new { @class = "form-control" })

            </div>
        </div>
        <div class="row">
            <div class="col-6">

                @if (!string.IsNullOrEmpty(Model.cropper_image))
                {
                    <img src="@Model.cropper_image" class="img-fluid img-thumbnail" />
                }

                <img id="image" style="max-height: 400px;">
            </div>
        </div>
        <div class="row">
            <div class="col text-center pt-5 pb-3">

                <a target="_blank" href="https://www.vanderwaal.eu">
                    <img src="/images/vdwwd.png" alt="van der Waal Webdesign" title="van der Waal Webdesign" />
                </a>

            </div>
        </div>

    </div>

}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.7/cropper.min.css" integrity="sha512-oG+0IPCSL2awaygM/2l1hPUgHDNnOWji9utPHodoAGbXwLH9yvgD7uRjFxdiKnDr+rx8ejxXYSsUBkcKFR7i0w==" crossorigin="anonymous" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.7/cropper.min.js" integrity="sha512-N4T9zTrqZUWCEhVU2uD0m47ADCWYRfEGNQ+dx/lYdQvOn+5FJZxcyHOY68QKsjTEC7Oa234qhXFhjPGQu6vhqg==" crossorigin="anonymous"></script>

<script src="/cropper.js"></script>